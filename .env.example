# Copy to .env and fill your credentials
API_ID=123456
API_HASH=your_api_hash_here
# Optional: used on first auth to create local session
PHONE_NUMBER=+10001112233

# Chat identifier: numeric ID or @username
GROUP_ID=@your_channel_or_group

# Directories (relative paths resolve to the project root)
DOWNLOAD_DIR=output\downloaded_dir
RESULTS_DIR=output\searched_dir
DB_FILE=db\app.db
LOGS_DIR=logs
LOG_FILE=logs\app.log
SESSION_NAME=session

# Server bind
HOST=127.0.0.1
PORT=8000

# Limits
MAX_FILE_SIZE_MB=500             # Configure in megabytes
MAX_FILE_AGE_DAYS=0              # 0 disables age filtering
AUTO_REFRESH_ON_FAILURE=true